
{
  "entities": {
    "User": {
      "title": "User",
      "description": "Représente un utilisateur de l'application GoMoodX.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Identifiant unique de l'utilisateur (Firebase Auth UID)." },
        "displayName": { "type": "string", "description": "Nom d'affichage public." },
        "fullName": { "type": "string", "description": "Nom complet (pour la vérification)." },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "pseudo": { "type": "string" },
        "role": { "type": "string", "enum": ["administrateur", "escorte", "client", "partenaire", "founder", "moderator"] },
        "partnerType": { "type": "string", "enum": ["establishment", "producer"] },
        "status": { "type": "string", "enum": ["active", "suspended", "pending"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "rewardPoints": { "type": "number" },
        "referralCode": { "type": "string" },
        "referredBy": { "type": "string" },
        "referralsCount": { "type": "number" },
        "profileImage": { "type": "string", "format": "uri" },
        "bannerImage": { "type": "string", "format": "uri" },
        "bio": { "type": "string" },
        "isVerified": { "type": "boolean" },
        "onlineStatus": { "type": "string", "enum": ["online", "offline"] },
        "lastLogin": { "type": "string", "format": "date-time" },
        "favorites": { "type": "array", "items": { "type": "string" } },
        "location": { "type": "string" },
        "galleryImages": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "dateOfBirth": { "type": "string", "format": "date" },
        "country": { "type": "string" },
        "city": { "type": "string" },
        "gender": { "type": "string" },
        "verificationStatus": { "type": "string", "enum": ["pending", "verified", "rejected"] },
        "verificationType": { "type": "string", "enum": ["selfie", "complete"] },
        "subscription": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "enum": ["premium_member", "premium_creator"] },
            "status": { "type": "string", "enum": ["active", "inactive", "cancelled"] },
            "startDate": { "type": "string", "format": "date-time" },
            "endDate": { "type": "string", "format": "date-time" }
          }
        }
      },
      "required": ["id", "displayName", "email", "role", "status", "createdAt"]
    },
    "PartnerRequest": {
      "title": "PartnerRequest",
      "description": "Représente une demande d'inscription d'un partenaire.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string", "enum": ["establishment", "producer"] },
        "companyName": { "type": "string" },
        "registerNumber": { "type": "string" },
        "country": { "type": "string" },
        "city": { "type": "string" },
        "address": { "type": "string" },
        "companyEmail": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "website": { "type": "string", "format": "uri" },
        "description": { "type": "string" },
        "managerName": { "type": "string" },
        "managerEmail": { "type": "string", "format": "email" },
        "managerPhone": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "reviewedBy": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "type", "companyName", "companyEmail", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "schema": { "$ref": "#/entities/User" },
        "description": "Stores all user profiles regardless of role."
      },
      {
        "path": "/wallets/{userId}",
        "description": "Stores user's virtual wallet information."
      },
      {
        "path": "/wallets/{userId}/transactions/{transactionId}",
        "description": "Subcollection for all transactions related to a user's wallet."
      },
      {
        "path": "/services/{serviceId}",
        "description": "Stores service listings (annonces) created by escorte or partner users."
      },
      {
        "path": "/services/{serviceId}/reviews/{reviewId}",
        "description": "Subcollection for reviews on a specific service."
      },
      {
        "path": "/reservations/{reservationId}",
        "description": "Stores reservation records for services."
      },
      {
        "path": "/products/{productId}",
        "description": "Stores products for sale, created by creators or producer partners."
      },
      {
        "path": "/lives/{liveId}",
        "description": "Stores information about live streaming sessions."
      },
      {
        "path": "/blog/{articleId}",
        "description": "Stores blog articles written by creators or admins."
      },
      {
        "path": "/messages/{messageId}",
        "description": "Stores private messages between users."
      },
      {
        "path": "/calls/{callId}",
        "description": "Used for WebRTC signaling to establish video/voice calls."
      },
      {
        "path": "/calls/{callId}/offerCandidates/{candidateId}",
        "description": "ICE candidates from the caller."
      },
      {
        "path": "/calls/{callId}/answerCandidates/{candidateId}",
        "description": "ICE candidates from the receiver."
      },
      {
        "path": "/supportTickets/{ticketId}",
        "description": "Stores user support requests."
      },
      {
        "path": "/partnerRequests/{requestId}",
        "schema": { "$ref": "#/entities/PartnerRequest" },
        "description": "Stores partner sign-up requests for admin review."
      },
      {
        "path": "/verifications/{userId}",
        "description": "Stores creator identity verification data."
      },
      {
        "path": "/settings/global",
        "description": "Stores global application settings, including platform-wide call rates."
      }
    ]
  }
}
